{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.1",
    "parameters": {
        "rgHyperV": {
            "type": "string",
            "defaultValue": "HyperV-onPrem"
        },
        "rgBackup": {
            "type": "string",
            "defaultValue": "BackupVMs-onPrem"
        },
        "rgBackupSiteRecovery": {
            "type": "string",
            "defaultValue": "AzureBSR-inAzure"
        },
        "location": {
            "type": "string",
            "defaultValue": "westeurope"
        },
        "absr_name": {
            "type": "string",
            "defaultValue": "SQUALIO-AzureBSR3"
        },
        "absr_storage_type": {
            "type": "string",
            "defaultValue": "Premium_LRS"
        }
    },
    "variables": {
        "absr_storage_name": "[concat(uniquestring(resourceGroup().id), 'absrdemo')]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2018-05-01",
            "location": "[parameters('location')]",
            "name": "[parameters('rgHyperV')]",
            "properties": {}
        },
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2018-05-01",
            "location": "[parameters('location')]",
            "name": "[parameters('rgBackup')]",
            "properties": {}
        },
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2018-05-01",
            "location": "[parameters('location')]",
            "name": "[parameters('rgBackupSiteRecovery')]",
            "properties": {}
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "ABSRDeployment",
            "resourceGroup": "[parameters('rgBackupSiteRecovery')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', parameters('rgBackupSiteRecovery'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "variables": {},
                    "resources": [
                        {
                            "type": "Microsoft.RecoveryServices/vaults",
                            "apiVersion": "2016-06-01",
                            "name": "[parameters('absr_name')]",
                            "location": "[parameters('location')]",
                            "properties": {},
                            "sku": {
                                "name": "RS0",
                                "tier": "Standard"
                            }
                        }
                    ],
                    "outputs": {}
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "ABSRStorageDeployment",
            "resourceGroup": "[parameters('rgBackupSiteRecovery')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', parameters('rgBackupSiteRecovery'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "variables": {},
                    "resources": [
                        {
                            "type": "Microsoft.RecoveryServices/storageAccounts",
                            "apiVersion": "2016-01-01",
                            "name": "[variables('absr_storage_name')]",
                            "location": "[parameters('location')]",
                            "properties": {},
                            "sku": {
                                "name": "[parameters('absr_storage_type')]"
                            },
                            "kind": "Storage"
                        }
                    ],
                    "outputs": {}
                }
            }
        }
    ],
    "outputs": {}
}